  <!-- Pages -->
   
  <bean id="Page" abstract="true" parent="Group">
      <property name="header">
        <bean parent="PageHeader"/>
      </property>
      <property name="layoutManager">
        <bean parent="BoxLayoutManager" p:orientation="VERTICAL"/>
      </property>     
  </bean> 
  
  <!-- Sections -->
  
  <bean id="Section" abstract="true" parent="Group">
      <property name="header">
        <bean parent="Header"/>
      </property> 
      <property name="layoutManager">
        <bean parent="BoxLayoutManager" p:orientation="VERTICAL"/>
      </property> 
  </bean>   
  
  <bean id="PanelSection" abstract="true" parent="Section">
      <property name="decorators">
        <map>
          <entry key="panel"><ref bean="PanelGroupDecorator"/></entry>
        </map>  
      </property>
      <property name="renderHeader" value="false"/>
  </bean> 
  
  <bean id="PanelGridSection" abstract="true" parent="PanelSection">
      <property name="layoutManager">
        <bean parent="GridLayoutManager"/>
      </property> 
  </bean>     
  
  <!-- Groups -->
  
  <bean id="Group" abstract="true" class="org.kuali.rice.kns.uif.container.Group" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/container/group/group.jsp"/>
      <property name="header">
        <bean parent="HeaderThree"/>
      </property> 
      <property name="layoutManager">
        <bean parent="BoxLayoutManager" p:orientation="VERTICAL"/>
      </property>  
      <property name="summaryMessageField">
        <bean parent="MessageField" p:messageType="SUMMARY" p:styleClass="summary"/>
      </property>            
  </bean> 
  
  <bean id="GroupGridLayout" abstract="true" parent="Group">
      <property name="layoutManager">
        <bean parent="GridLayoutManager"/>
      </property>
  </bean>
  
  <bean id="NavigationGroup" abstract="true" class="org.kuali.rice.kns.uif.container.NavigationGroup" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/container/group/navigationGroup.jsp"/>
  </bean>
  
  <bean id="MenuNavigation" abstract="true" parent="NavigationGroup">
      <property name="navigationType" value="VERTICAL_MENU"/>
  </bean>
  
  <bean id="GroupBodyOnly" abstract="true" parent="Group">
      <property name="renderHeader" value="false"/>
      <property name="renderFooter" value="false"/>
  </bean>  
  
  <bean id="CollectionGroup" abstract="true" class="org.kuali.rice.kns.uif.container.CollectionGroup" parent="Group">
      <property name="bindingInfo">
        <ref bean="BindingInfo"/>
      </property>
      <property name="actionFields">
        <list>
          <bean parent="ActionField" p:methodToCall="deleteLine" p:actionLabel="delete"/>
        </list>
      </property>
      <property name="layoutManager">
        <bean parent="StackedLayoutManager"/>
      </property> 
  </bean> 
  
  <bean id="CollectionTableGroup" abstract="true" parent="CollectionGroup">
      <property name="layoutManager">
        <bean parent="TableLayoutManager"/>
      </property> 
  </bean>     
  
  <!-- Decorators -->
  
  <bean id="PanelGroupDecorator" class="org.kuali.rice.kns.uif.decorator.PanelGroupDecorator" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/container/group/panelGroup.jsp"/>
      <property name="header">
        <bean parent="PanelHeader"/>
      </property>
      <property name="styleClass" value="tab-container"/>
  </bean> 
  
  <!-- Fields -->
  
  <bean id="AttributeField" abstract="true" class="org.kuali.rice.kns.uif.field.AttributeField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/attributeField.jsp"/>
      <property name="labelField">
        <bean parent="LabelField"/>
      </property>      
      <property name="bindingInfo">
        <ref bean="BindingInfo"/>
      </property>
  </bean>  
  
  <bean id="FormField" abstract="true" parent="AttributeField">
      <property name="bindingInfo.bindToForm" value="true"/>
      <property name="bindingInfo.bindToModel" value="false"/>
  </bean>    
  
  <bean id="LabelField" abstract="true" class="org.kuali.rice.kns.uif.field.LabelField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/labelField.jsp"/>
      <property name="align" value="right"/>
      <property name="style" value="font-size: .8em;font-weight: bold;"/>
      <property name="requiredMessageField">
        <bean parent="MessageField" p:messageText="*" p:messageType="REQUIRED" p:styleClass="required"/>
      </property>   
  </bean>  
  
  <bean id="ActionField" abstract="true" class="org.kuali.rice.kns.uif.field.ActionField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/actionField.jsp"/>
  </bean>  
  
  <bean id="ActionLinkField" abstract="true" parent="ActionField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/actionLinkField.jsp"/>
  </bean>  
  
  <bean id="LinkField" abstract="true" class="org.kuali.rice.kns.uif.field.LinkField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/linkField.jsp"/>
  </bean>  
  
  <bean id="MessageField" abstract="true" class="org.kuali.rice.kns.uif.field.MessageField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/messageField.jsp"/>
  </bean> 
  
  <bean id="GroupField" abstract="true" class="org.kuali.rice.kns.uif.field.GroupField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/groupField.jsp"/>
      <property name="group">
         <bean parent="Group"/>
      </property>
      <property name="labelField">
        <bean parent="LabelField"/>
      </property>        
  </bean>    
  
  <bean id="FieldGroup" abstract="true" parent="GroupField">
      <property name="group">
         <bean parent="GroupBodyOnly"/>
      </property>  
  </bean> 
  
  <!-- Headers -->
  
  <bean id="Header" abstract="true" class="org.kuali.rice.kns.uif.field.HeaderField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/headerField.jsp"/>
      <property name="headerLevel" value="h1"/>
  </bean>
  
  <bean id="HeaderTwo" abstract="true" parent="Header">
      <property name="headerLevel" value="h2"/>
  </bean>
  
  <bean id="HeaderThree" abstract="true" parent="Header">
      <property name="headerLevel" value="h3"/>
  </bean>
  
  <bean id="HeaderFour" abstract="true" parent="Header">
      <property name="headerLevel" value="h4"/>
  </bean>
  
  <bean id="HeaderFive" abstract="true" parent="Header">
      <property name="headerLevel" value="h5"/>
  </bean>
  
  <bean id="HeaderSix" abstract="true" parent="Header">
      <property name="headerLevel" value="h6"/>
  </bean>      
  
  <bean id="ViewHeader" abstract="true" parent="Header">
      <property name="styleClass" value="headerarea"/>
  </bean>
  
  <bean id="PageHeader" abstract="true" parent="Header">
      <property name="styleClass" value="pageHeader"/>
  </bean>  
  
  <bean id="PanelHeader" abstract="true" parent="Header">
      <property name="styleClass" value="tab-new"/>
  </bean>
  
  <!-- Footers -->
  <bean id="Footer" abstract="true" class="org.kuali.rice.kns.uif.container.Group" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/container/group/group.jsp"/>
      <property name="renderHeader" value="false"/>
      <property name="layoutManager">
        <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
      </property> 
      <property name="styleClass" value="globalbuttons"/>
  </bean>  
  
  <!-- Layout Managers -->

  <bean id="BoxLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.BoxLayoutManager" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/box.jsp"/>
      <property name="orientation" value="HORIZONTAL"/>
      <property name="padding" value="1px"/>
      <property name="labelPlacement" value="TOP"/>
  </bean>  
  
  <bean id="GridLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.GridLayoutManager" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/grid.jsp"/>
      <property name="numberOfColumns" value="2"/>
      <property name="styleClass" value="datatable"/>
  </bean>  
  
  <bean id="TableLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.TableLayoutManager" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/table.jsp"/>
      <property name="styleClass" value="datatable display"/>
      <property name="applyAlternatingRowStyles" value="true"/>
      <property name="headerFieldPrototype">
        <bean parent="LabelField" p:renderColon="false" p:align="center" p:styleClass="infoline"/>
      </property>      
      <property name="sequenceFieldPrototype">
        <bean parent="AttributeField" p:readOnly="true" p:label=" " p:shortLabel=" " p:align="right"/>
      </property>
      <property name="actionFieldPrototype">
        <bean parent="FieldGroup" p:align="center" p:required="false" p:label="Actions" p:shortLabel="Actions"/>
      </property>  
      <property name="tableDecorator">
        <ref bean="TableDecorator"/>
      </property>   
  </bean>  
  
  <bean id="StackedLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.StackedLayoutManager" parent="BoxLayoutManager">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/stacked.jsp"/>
      <property name="lineGroupPrototype">
        <bean parent="GroupGridLayout">
           <property name="footer">
             <bean parent="Footer"/>
           </property>
        </bean>
      </property> 
  </bean>    
        
  <!-- Controls -->
  
  <bean id="TextControl" abstract="true" class="org.kuali.rice.kns.uif.control.TextControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/text.jsp"/>
  </bean>  
  
  <bean id="CheckboxControl" abstract="true" class="org.kuali.rice.kns.uif.control.CheckboxControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/checkbox.jsp"/>
  </bean> 
  
  <bean id="HiddenControl" abstract="true" class="org.kuali.rice.kns.uif.control.HiddenControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/hidden.jsp"/>
  </bean>  
  
  <bean id="TextAreaControl" abstract="true" class="org.kuali.rice.kns.uif.control.TextAreaControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/textArea.jsp"/>
  </bean> 
  
  <bean id="SelectControl" abstract="true" class="org.kuali.rice.kns.uif.control.SelectControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/select.jsp"/>
  </bean>     
  
  <bean id="RadioGroupControl" abstract="true" class="org.kuali.rice.kns.uif.control.RadioGroupControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/radioGroup.jsp"/>
  </bean>   
  
  <bean id="FileControl" abstract="true" class="org.kuali.rice.kns.uif.control.FileControl" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/control/file.jsp"/>
  </bean>  
  
  <bean id="DateControl" abstract="true" parent="TextControl">
      <property name="size" value="10"/>
      <property name="datePicker">
        <ref bean="DatePicker"/>
      </property>
  </bean>    
  
  <!-- Widgets -->
  
  <bean id="DatePicker" class="org.kuali.rice.kns.uif.widget.DatePicker" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/widget/datePicker.jsp"/>
      <property name="widgetOptions">
          <map>
              <entry key="showOn" value="button"/>
              <!-- TODO: fix me, this should use the ConfigProperties.krad.externalizable.images.url once EL expressions are working -->
              <entry key="buttonImage" value="/kr-dev/krad/images/cal.gif"/>
              <entry key="buttonImageOnly" value="true"/>
              <entry key="showAnim" value="slide"/>
              <entry key="showButtonPanel" value="true"/>
              <entry key="changeMonth" value="true"/>
              <entry key="changeYear" value="true"/>
          </map>
      </property>
  </bean> 
  
  <bean id="TableDecorator" class="org.kuali.rice.kns.uif.widget.TableDecorator" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/widget/tableDecorator.jsp"/>
  </bean>
  
  <!-- Misc -->
  
  <bean id="LabelFieldGenerator" class="org.kuali.rice.kns.uif.initializer.LabelFieldGenerator"/>
  
  <bean id="BindingInfo" class="org.kuali.rice.kns.uif.BindingInfo" scope="prototype"/>
  
  <bean id="inquiryViewTypeIndexer" class="org.kuali.rice.kns.datadictionary.view.InquiryViewTypeIndexer" scope="prototype"/> 
   
</beans>