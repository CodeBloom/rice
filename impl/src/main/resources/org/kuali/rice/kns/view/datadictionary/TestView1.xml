   <bean id="testView1" parent="FormView">
      <property name="id" value="testView1"/>
      <property name="title" value="Test View 1"/>
      <property name="entryPageId" value="page1"/>   
      <property name="items">
        <list>
          <bean parent="Page" p:id="page1">
             <property name="header">
               <ref bean="PagePanelHeader"/>
             </property>
             <property name="items">
               <list>
                 <ref bean="testSection1"/>
                 <ref bean="testSection6"/>
                 <ref bean="testSection5"/>
                 <ref bean="testSection2"/>
                 <ref bean="testSection4"/>
               </list>
             </property> 
          </bean>
          <bean parent="Page" p:id="page2">
             <property name="header">
               <ref bean="PagePanelHeader"/>
             </property>
             <property name="items">
               <list>
                 <ref bean="testSection3"/>
               </list>
             </property> 
          </bean>          
        </list>
      </property>    
      <property name="formClass" value="org.kuali.rice.kns.web.spring.form.UITestForm"/>
      <property name="defaultModelPath" value="travelAccount1"/>
      <property name="controllerRequestMapping" value="uitest"/>
      <property name="footer">
        <ref bean="testViewFooter"/>
      </property>
   </bean>
   
   <bean id="testViewMenu" parent="MenuNavigation">
      <property name="items">
        <list> 
          <bean parent="ActionLinkField" p:methodToCall="navigateToPage1" p:actionLabel="Page 1"/>
          <bean parent="ActionLinkField" p:methodToCall="navigateToPage2" p:actionLabel="Page 2"/>
        </list>
      </property>  
   </bean>   
   
   <bean id="testSection1" parent="PanelSection">
      <property name="id" value="testSection1"/>
      <property name="title" value="Test Section 1"/> 
      <property name="items">
        <list>
          <ref bean="testGroup1"/>
          <ref bean="testGroup2"/>
        </list>
      </property> 
   </bean>
   
   <bean id="testGroup1" parent="GroupGridLayout">   
      <property name="id" value="testGroup1"/>
      <property name="title" value="Test Group 1"/> 
      <property name="items">
        <list>
          <bean parent="FormField" p:name="field1" p:label="Field 1" p:maxLength="4">
            <property name="control">
              <bean parent="TextControl" p:size="5"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field2" p:label="Field 2" p:required="true" p:maxLength="25">
            <property name="control">
              <bean parent="TextControl" p:size="26"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field3" p:label="Field 3" p:maxLength="9">
            <property name="control">
              <bean parent="DateControl" p:size="10"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field4" p:label="Field 4">
            <property name="control">
              <bean parent="SelectControl"/>
            </property>
            <property name="optionsFinder">
              <bean class="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues"/>
            </property>
          </bean>                              
        </list>
      </property> 
      <property name="summary" value="Group with grid layout and 2 columns"/>      
   </bean>
   
   <bean id="testGroup2" parent="GroupGridLayout" p:layoutManager.style="width: 50%">   
      <property name="id" value="testGroup2"/>
      <property name="title" value="Test Group 2"/> 
      <property name="layoutManager.numberOfColumns" value="4"/>
      <property name="items">
        <list>
          <bean parent="FormField" p:name="field5" p:label="Field 5" p:width="auto" p:maxLength="4">
            <property name="control">
              <bean parent="TextControl" p:size="5"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field6" p:label="Field 6" p:required="true" p:width="auto" p:maxLength="25">
            <property name="control">
              <bean parent="TextControl" p:size="26"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field7" p:label="Field 8" p:width="auto" p:maxLength="9">
            <property name="control">
              <bean parent="TextControl" p:size="10"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field8" p:label="Field 8" p:width="auto">
            <property name="control">
              <bean parent="CheckboxControl"/>
            </property>
          </bean>                              
        </list>
      </property> 
      <property name="summary" value="Group with grid layout, 4 columns, 50% centered"/>       
   </bean>  
   
   <bean id="testSection6" parent="PanelSection">
      <property name="id" value="testSection6"/>
      <property name="title" value="Test Collections"/> 
      <property name="items">
        <list>
          <ref bean="testGroup4"/>
          <ref bean="testGroup5"/>
        </list>
      </property> 
   </bean>   
   
   <bean id="testGroup4" parent="CollectionTableGroup" p:layoutManager.numberOfColumns="6">
      <property name="id" value="testGroup4"/>
      <property name="title" value="Collection Group 1"/>  
      <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
      <property name="name" value="fiscalOfficer.accounts"/>
      <property name="layoutManager.sequenceAttributeName" value="number"/>
      <property name="items">
        <list>
          <bean parent="AttributeField" p:name="number" p:required="true"/>
          <bean parent="AttributeField" p:name="name"/>
          <bean parent="FieldGroup" p:label="Sub Account">
            <property name="items">
              <list>         
               <bean parent="AttributeField" p:name="subAccount" p:showLabel="false"/>
               <bean parent="AttributeField" p:name="subAccountName" p:readOnly="true" p:showLabel="false"/>
              </list>
            </property>
          </bean>
          <bean parent="AttributeField" p:name="subsidizedPercent"/>
          <bean parent="AttributeField" p:name="createDate"/>
          <bean parent="AttributeField" p:name="foId" p:required="true"/>
        </list>
      </property>      
      <property name="summary" value="Group with collection and table layout"/>  
   </bean>
   
   <bean id="testGroup5" parent="CollectionGroup">
      <property name="id" value="testGroup5"/>
      <property name="title" value="Collection Group 2"/>  
      <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
      <property name="name" value="fiscalOfficer.accounts"/>
      <property name="bindingInfo.modelPath" value="travelAccount2"/>
      <property name="items">
        <list>
          <bean parent="AttributeField" p:name="number"/>
          <bean parent="AttributeField" p:name="name"/>
          <bean parent="AttributeField" p:name="foId"/>
        </list>
      </property>  
      <property name="addLineLabel" value="New Account"/>     
      <property name="layoutManager.summaryTitle" value="Account"/> 
      <property name="layoutManager.summaryFields">
        <list>
          <value>number</value>
          <value>name</value>
        </list>
      </property>
      <property name="summary" value="Group with collection and stacked layout"/>  
   </bean> 
   
   <bean id="testGroup3" parent="GroupGridLayout" p:layoutManager.numberOfColumns="4">   
      <property name="id" value="testGroup3"/>
      <property name="title" value="Test Group 3"/> 
      <property name="items">
        <list>
          <bean parent="FormField" p:name="field33" p:label="Bank ID">
            <property name="control">
              <bean parent="TextControl" p:size="5"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field13" p:label="Bank Name" p:required="true">
            <property name="control">
              <bean parent="TextControl" p:size="26"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field14" p:label="Bank Route Number" p:colSpan="2" p:labelField.colSpan="2" p:maxLength="29">
            <property name="control">
              <bean parent="TextControl" p:size="30"/>
            </property>
          </bean>  
          <bean parent="FormField" p:name="field15" p:label="Bank Address" p:colSpan="3" p:labelField.colSpan="1" p:maxLength="69">
            <property name="control">
              <bean parent="TextControl" p:size="70"/>
            </property>
          </bean>           
          <bean parent="FormField" p:name="field16" p:label="Bank Zip" p:colSpan="1" p:labelField.colSpan="3" p:maxLength="4">
            <property name="control">
              <bean parent="TextControl" p:size="5"/>
            </property>
          </bean>            
          <bean parent="FormField" p:name="field17" p:label="Bank Description" p:rowSpan="2" p:labelField.rowSpan="2">
            <property name="control">
              <bean parent="TextAreaControl" p:rows="5" p:cols="4"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field18" p:label="Bank Type" p:maxLength="9">
            <property name="control">
              <bean parent="DateControl" p:size="10"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="field19" p:label="Bank Rating" p:maxLength="9">
            <property name="control">
              <bean parent="DateControl" p:size="10"/>
            </property>
          </bean>         
        </list>
      </property> 
      <property name="summary" value="Group with grid layout and various col/row spans"/>      
   </bean> 
   
   <bean id="testSection5" parent="PanelSection">
      <property name="id" value="testSection5"/>
      <property name="title" value="Banking Info"/> 
      <property name="items">
        <list>
          <ref bean="testGroup3"/>
        </list>
      </property> 
   </bean>   
   
   <bean id="testSection2" parent="PanelGridSection">
      <property name="id" value="testSection2"/>
      <property name="title" value="Test Section 2"/> 
      <property name="fieldBindModelPath" value="travelAccount3"/>
      <property name="items">
        <list>
          <bean parent="AttributeField" p:name="number"/>
          <bean parent="AttributeField" p:name="name"/>
        </list>
      </property> 
      <property name="summary" value="Section without nested group, grid layout"/> 
   </bean> 
   
   <bean id="testSection4" parent="PanelGridSection">
      <property name="id" value="testSection4"/>
      <property name="title" value="Test Section 4"/> 
      <property name="layoutManager.numberOfColumns" value="4"/>
      <property name="items">
        <list>
          <bean parent="FieldGroup" p:label="Field Group 1" p:width="40%" p:labelField.width="10%">
            <property name="items">
              <list>
                <bean parent="FormField" p:name="field20" p:label="Field 11" p:maxLength="4">
                  <property name="control">
                    <bean parent="TextControl" p:size="5"/>
                  </property>
                </bean>    
                <bean parent="FormField" p:name="field21" p:label="Field 12" p:maxLength="20">
                  <property name="control">
                    <bean parent="TextControl" p:size="21"/>
                  </property>
                </bean>                
                <bean parent="FormField" p:name="field22" p:label="Field 13">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>  
                <bean parent="FormField" p:name="field23" p:label="Field 14" p:maxLength="9">
                  <property name="control">
                    <bean parent="TextControl" p:size="10"/>
                  </property>
                </bean>                                        
              </list>
            </property>
          </bean>
          <bean parent="FieldGroup" p:label="Currency Type" p:width="40%" p:labelField.width="10%">
            <property name="items">
              <list>
                <bean parent="FormField" p:name="field24" p:label="Checks" p:labelPlacement="RIGHT">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>    
                <bean parent="FormField" p:name="field25" p:label="Dollars" p:labelPlacement="RIGHT">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>                
                <bean parent="FormField" p:name="field26" p:label="Coins" p:labelPlacement="RIGHT">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>                        
              </list>
            </property>
          </bean>
          <bean parent="FieldGroup" p:label="Field Group 3" p:width="40%" p:labelField.width="10%">
            <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
            <property name="items">
              <list>
                <bean parent="FormField" p:name="field28" p:label="Field 11" p:showLabel="false" p:maxLength="4">
                  <property name="control">
                    <bean parent="TextControl" p:size="5"/>
                  </property>
                </bean>    
                <bean parent="FormField" p:name="field32" p:label="Field 12" p:showLabel="false" p:maxLength="20">
                  <property name="control">
                    <bean parent="TextControl" p:size="21"/>
                  </property>
                </bean>                
              </list>
            </property>
          </bean>
          <bean parent="FieldGroup" p:label="Field Group 4" p:width="40%" p:labelField.width="10%">
            <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
            <property name="items">
              <list>
                <bean parent="FormField" p:name="field29" p:label="Field 8" p:labelPlacement="RIGHT">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>    
                <bean parent="FormField" p:name="field30" p:label="Field 9" p:labelPlacement="RIGHT">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>                
                <bean parent="FormField" p:name="field31" p:label="Field 10" p:labelPlacement="RIGHT">
                  <property name="control">
                    <bean parent="CheckboxControl"/>
                  </property>
                </bean>                        
              </list>
            </property>
          </bean>          
        </list>
      </property> 
      <property name="summary" value="Section with some field groups"/> 
   </bean> 
   
   <bean id="testSection3" parent="PanelGridSection">
      <property name="id" value="testSection3"/>
      <property name="title" value="Test Section 3"/> 
      <property name="fieldBindModelPath" value="travelAccount3"/>
      <property name="items">
        <list>
          <bean parent="AttributeField" p:name="number" p:required="true">
            <property name="control">
              <bean parent="RadioGroupControl"/>
            </property>
            <property name="optionsFinder">
              <bean class="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues"/>
            </property>            
          </bean>
          <bean parent="AttributeField" p:name="name" p:label="Account File" p:required="true">
            <property name="control">
              <bean parent="FileControl" p:size="30"/>
            </property>
          </bean>
        </list>
      </property> 
      <property name="summary" value="Section without nested group, grid layout"/> 
   </bean>       
   
   <bean id="testViewFooter" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="navigateToPage2" p:actionLabel="Save"/>
          <bean parent="ActionField" p:methodToCall="close" p:actionLabel="Close"/>
          <bean parent="ActionLinkField" p:methodToCall="cancel" p:actionLabel="Cancel"/>
        </list>
      </property>  
   </bean>

</beans>