  <!-- Layout Managers -->

  <bean id="BoxLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.BoxLayoutManager" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/box.jsp"/>
      <property name="orientation" value="HORIZONTAL"/>
      <property name="padding" value="1px"/>
      <property name="labelPlacement" value="TOP"/>
  </bean>  
  
  <bean id="GridLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.GridLayoutManager" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/grid.jsp"/>
      <property name="numberOfColumns" value="2"/>
      <property name="styleClass" value="datatable"/>
  </bean>  
  
  <bean id="TableLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.TableLayoutManager" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/table.jsp"/>
      <property name="styleClass" value="datatable display"/>
      <property name="applyAlternatingRowStyles" value="true"/>
      <property name="headerFieldPrototype">
        <bean parent="LabelField" p:renderColon="false" p:align="center" p:styleClass="infoline"/>
      </property>      
      <property name="sequenceFieldPrototype">
        <bean parent="AttributeField" p:readOnly="true" p:label=" " p:shortLabel=" " p:align="right"/>
      </property>
      <property name="actionFieldPrototype">
        <bean parent="FieldGroup" p:align="center" p:required="false" p:label="Actions" p:shortLabel="Actions"/>
      </property>  
      <property name="tableTools">
        <ref bean="TableTools"/>
      </property>   
  </bean>  
  
  <bean id="StackedLayoutManager" abstract="true" class="org.kuali.rice.kns.uif.layout.StackedLayoutManager" parent="BoxLayoutManager">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/layout/stacked.jsp"/>
      <property name="lineGroupPrototype">
        <bean parent="GroupGridLayout">
           <property name="header">
             <bean parent="HeaderThree"/>
           </property>
           <property name="footer">
             <bean parent="Footer"/>
           </property>
        </bean>
      </property> 
  </bean>  
  
</beans>  