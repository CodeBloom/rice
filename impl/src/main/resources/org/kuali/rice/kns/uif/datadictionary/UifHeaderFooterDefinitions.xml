  <!-- Base Headers -->
  
  <bean id="Header" abstract="true" class="org.kuali.rice.kns.uif.field.HeaderField" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/field/headerField.jsp"/>
      <property name="headerLevel" value="h1"/>
  </bean>
  
  <bean id="HeaderTwo" abstract="true" parent="Header">
      <property name="headerLevel" value="h2"/>
  </bean>
  
  <bean id="HeaderThree" abstract="true" parent="Header">
      <property name="headerLevel" value="h3"/>
  </bean>
  
  <bean id="HeaderFour" abstract="true" parent="Header">
      <property name="headerLevel" value="h4"/>
  </bean>
  
  <bean id="HeaderFive" abstract="true" parent="Header">
      <property name="headerLevel" value="h5"/>
  </bean>
  
  <bean id="HeaderSix" abstract="true" parent="Header">
      <property name="headerLevel" value="h6"/>
  </bean>      
  
  <bean id="HeaderView" abstract="true" parent="Header">
      <property name="styleClass" value="view_header"/>
  </bean>
  
  <bean id="HeaderPage" abstract="true" parent="Header">
      <property name="styleClass" value="page_header"/>
  </bean>  
  
  <bean id="Header_Accordion" abstract="true" parent="Header">
      <property name="styleClass" value="tab-new"/>
  </bean>

  <!-- Common Headers --> 
  <bean id="HeaderPage_NoActions" parent="HeaderPage">
    <property name="group">
      <bean parent="GroupBodyOnly">
        <property name="styleClass" value="right"/>
        <property name="layoutManager.orientation" value="HORIZONTAL"/> 
      </bean>
    </property>
  </bean>
  
  <bean id="HeaderPage_AccordionEdit" parent="HeaderPage">
     <property name="group">
       <bean parent="Group_ExpandCloseActionsRequired"/>
     </property>
  </bean>
  
  <bean id="HeaderPage_AccordionReadOnly" parent="HeaderPage">
     <property name="group">
       <bean parent="Group_ExpandCloseActions"/>
     </property>
  </bean>
  
  <!-- Base Footers -->
    
  <bean id="Footer" abstract="true" class="org.kuali.rice.kns.uif.container.Group" scope="prototype">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/container/group/group.jsp"/>
      <property name="renderHeader" value="false"/>
      <property name="layoutManager">
        <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
      </property> 
      <property name="styleClass" value="globalbuttons"/>
  </bean>  
  
  <!-- Common Footers -->
  
  <bean id="FooterInquiry" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>
      </property>  
  </bean>
  
  <bean id="FooterDocument" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="submit" p:actionLabel="submit"/>
          <bean parent="ActionField" p:methodToCall="save" p:actionLabel="save"/>
          <bean parent="ActionField" p:methodToCall="blanketApprove" p:actionLabel="blanket approve"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="close"/>
          <bean parent="ActionLinkField" p:methodToCall="cancel" p:actionLabel="cancel"/>
        </list>
      </property>  
  </bean>  
  
  <bean id="Footer_SaveCloseCancel" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="save" p:actionLabel="save"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="close"/>
          <bean parent="ActionLinkField" p:methodToCall="cancel" p:actionLabel="cancel"/>
        </list>
      </property>  
  </bean>  

</beans>