   <bean id="KradFormView1" parent="View">
      <property name="id" value="KradFormView1"/>
      <property name="title" value="KRAD Form 1"/>
      <property name="navigation">
         <ref bean="testViewMenu2"/>
      </property>
      <property name="entryPageId" value="page1"/>   
      <property name="items">
        <list>
          <bean parent="Page" p:id="page1">
             <property name="header">
               <ref bean="PagePanelHeader"/>
             </property>
             <property name="items">
               <list>
                 <ref bean="testSection1"/>
                 <ref bean="testSection2"/>
                 <ref bean="testSection3"/>
               </list>
             </property> 
          </bean>
        </list>
      </property>    
      <property name="modelClasses">
        <map>
           <entry key="travelAccount1" value="edu.sampleu.travel.bo.TravelAccount"/> 
        </map>       
      </property> 
      <property name="formClass" value="org.kuali.rice.kns.web.spring.form.KradFormTestForm"/>
      <property name="controllerRequestMapping" value="kradformtest"/>
      <property name="footer">
        <ref bean="testViewFooter2"/>
      </property>
   </bean>
   
   <bean id="testViewMenu" parent="MenuNavigation">
      <property name="items">
        <list> 
          <bean parent="ActionLinkField" p:methodToCall="navigateToPage1" p:actionLabel="Page 1"/>
        </list>
      </property>  
   </bean>   

   <bean id="testViewMenu2" parent="MenuNavigation">
      <property name="items">
        <list> 
          <bean parent="ActionLinkField" p:methodToCall="navigateToPage1" p:actionLabel="Page 1"/>
          <bean parent="ActionLinkField" p:methodToCall="navigateToPage2" p:actionLabel="Page 2"/>
        </list>
      </property>  
   </bean>   
   
   <bean id="testViewFooter2" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="save" p:actionLabel="Save"/>
          <bean parent="ActionField" p:methodToCall="close" p:actionLabel="Close"/>
          <bean parent="ActionLinkField" p:methodToCall="cancel" p:actionLabel="Cancel"/>
        </list>
      </property>  
   </bean>

   <bean id="testSection1" parent="PanelGridSection">
      <property name="id" value="testSection1"/>
      <property name="title" value="Travel Account Objects" /> 
      <property name="fieldBindByNamePrefix" value="travelAccount1"/> 
      <property name="items">
        <list>
          <bean parent="AttributeField" p:name="number"/>
          <bean parent="AttributeField" p:name="name"/>
        </list>
      </property> 
      <property name="summary" value="A section of travel account attributes."/> 
   </bean> 
   
   <bean id="simpleObjectGroup" parent="GroupGridLayout" p:layoutManager.numberOfColumns="4">   
      <property name="id" value="simpleObjectGroup"/>
      <property name="title" value="Simple Objects"/> 
      <property name="items">
        <list>
          <bean parent="FormField" p:name="testText" p:label="Test Text" p:maxLength="20">
            <property name="control">
              <bean parent="TextControl" p:size="20"/>
            </property>
          </bean>
          <bean parent="FormField" p:name="kDecimal" p:label="Kuali Decimal Test" p:maxLength="20">
            <property name="control">
              <bean parent="TextControl" p:size="20"/>
            </property>
          </bean>
        </list>
      </property> 
      <property name="summary" value="Group with grid layout and various col/row spans"/>      
   </bean> 

   <bean id="testSection2" parent="PanelGridSection">
      <property name="id" value="testSection2"/>
      <property name="title" value="Simple Objects" />
      <property name="items">
        <list>
          <ref bean="simpleObjectGroup"/>
        </list>
      </property> 
      <property name="summary" value="A section of simple attributes"/> 
   </bean> 
   
   <bean id="complexObjectGroup" parent="GroupGridLayout" p:layoutManager.numberOfColumns="4">   
      <property name="id" value="complexObjectGroup"/>
      <property name="title" value="Complex Objects"/> 
      <property name="items">
        <list>
	      <bean parent="FormField" p:name="startDate" p:label="Start Date" p:maxLength="15">
	        <property name="control">
	          <bean parent="DateControl" p:size="10"/>
	        </property>
	      </bean>
	      <bean parent="FormField" p:name="selectTest" p:label="Select Test">
	        <property name="control">
	          <bean parent="SelectControl"/>
	        </property>
	        <property name="optionsFinder">
	          <bean class="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues"/>
	        </property>
	      </bean>
	      <bean parent="FormField" p:name="checkTest" p:label="Check Test" p:width="auto">
	        <property name="control">
	          <bean parent="CheckboxControl"/>
	        </property>
	      </bean>
	      <bean parent="FormField" p:name="radioTest" p:label="Radio Test">
	        <property name="control">
	          <bean parent="RadioGroupControl"/>
	        </property>
	        <property name="optionsFinder">
	          <bean class="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues"/>
	        </property>
	      </bean>
        </list>
      </property> 
      <property name="summary" value="Group with grid layout and various col/row spans"/>      
   </bean> 

   <bean id="testSection3" parent="PanelGridSection">
      <property name="id" value="testSection3"/>
      <property name="title" value="Complex Objects" />
      <property name="items">
        <list>
          <ref bean="complexObjectGroup"/>
        </list>
      </property> 
      <property name="summary" value="A section of complex controls"/> 
   </bean> 

</beans>