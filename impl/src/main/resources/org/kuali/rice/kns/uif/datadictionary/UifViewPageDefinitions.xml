  <!-- Base Views -->
  
  <bean id="View" abstract="true" class="org.kuali.rice.kns.uif.container.View" scope="prototype">
      <property name="viewHelperServiceBeanId" value="ViewHelperService"/>
      <property name="styleClass" value="workarea"/>
      <property name="header">
        <bean parent="HeaderView"/>
      </property> 
      <property name="footer">
        <bean parent="Footer"/>
      </property> 
      <property name="additionalCssFiles">
        <list>
          <value>/krad/css/kuali-stacked.css</value>
        </list>
      </property>
  </bean>
  
  <bean id="FormView" abstract="true" class="org.kuali.rice.kns.uif.container.FormView" parent="View">
      <property name="template" value="/krad/WEB-INF/jsp/tiles/container/view/view.jsp"/>
      <property name="onSubmitScript" value="createLoading(true);return hasFormAlreadyBeenSubmitted();"/>
      <property name="footer">
        <ref bean="Footer_SaveCloseCancel"/>
      </property>
  </bean>

  <!-- Common Views -->
  
  <bean id="InquiryView" abstract="true" class="org.kuali.rice.kns.uif.container.InquiryView" parent="FormView">
     <property name="viewName" value="default"/>
     <property name="viewHelperServiceBeanId" value="kualiInquirable"/>
     <property name="formClass" value="org.kuali.rice.kns.web.spring.form.InquiryForm"/>
     <property name="defaultBindingObjectPath" value="bo"/>
     <property name="controllerRequestMapping" value="inquiry"/>
     <property name="readOnly" value="true"/>
     <property name="singlePageView" value="true"/>
     <property name="page">
        <bean parent="PageInquiry"/>
     </property>
     <property name="footer">
        <bean parent="FooterInquiry"/>
     </property>     
  </bean>
  
  <bean id="LookupView" abstract="true" class="org.kuali.rice.kns.uif.container.LookupView" parent="FormView">
     <property name="viewName" value="default"/>
     <property name="viewHelperServiceBeanId" value="kualiLookupable"/>
     <property name="formClass" value="org.kuali.rice.kns.web.spring.form.LookupForm"/>
     <property name="controllerRequestMapping" value="lookup"/>
     <property name="readOnly" value="false"/>
     <property name="singlePageView" value="true"/>
     <property name="page">
        <bean parent="PageLookup"/>
     </property>
      <property name="footer">
        <bean parent="Footer"/>
      </property>
  </bean>
  
  <bean id="DocumentView" abstract="true" class="org.kuali.rice.kns.uif.container.DocumentView" parent="FormView">
     <property name="formClass" value="org.kuali.rice.kns.web.spring.form.DocumentFormBase"/>
     <property name="defaultBindingObjectPath" value="document"/>
     <property name="footer">
        <bean parent="FooterDocument"/>
     </property>     
  </bean>
  
  <bean id="MaintenanceView" abstract="true" class="org.kuali.rice.kns.uif.container.MaintenanceView" parent="DocumentView">
     <property name="viewName" value="default"/>
     <property name="viewHelperServiceBeanId" value="kualiMaintainable"/>
     <property name="formClass" value="org.kuali.rice.kns.web.spring.form.MaintenanceForm"/>
     <property name="defaultBindingObjectPath" value="document.newMaintainableObject.businessObject"/>
     <property name="oldObjectBindingPath" value="document.oldMaintainableObject.businessObject"/>
     <property name="controllerRequestMapping" value="maintenance"/>  
     <property name="singlePageView" value="true"/>
     <property name="header">
        <bean parent="HeaderViewDocument"/>
     </property>
     <property name="page">
        <bean parent="Page_Accordion"/>
     </property> 
     <property name="itemOrderingSequence" value="11"/>
     <property name="items">
       <list>
          <bean parent="Group_DocumentOverview" p:order="10"/>
          <bean parent="Group_DocumentNotes" p:decorator.defaultOpen="false" p:order="30"/>  
          <bean parent="Group_DocumentRouteLog" p:decorator.defaultOpen="false" p:order="40"/>  
       </list>
     </property>         
  </bean>
  
  <!-- Base Pages -->
   
  <bean id="Page" abstract="true" parent="Group">
      <property name="header">
        <bean parent="HeaderPage"/>
      </property>
      <property name="layoutManager">
        <bean parent="BoxLayoutManager" p:orientation="VERTICAL"/>
      </property>     
  </bean>   
   
  <!-- Common Pages --> 
  
  <bean id="Page_Accordion" parent="Page">
      <property name="header">
         <ref bean="HeaderPage_AccordionEdit"/>
      </property>
  </bean>
  
  <bean id="PageInquiry" parent="Page">
      <property name="header">
         <ref bean="HeaderPage_AccordionReadOnly"/>
      </property>
  </bean>
            
  <bean id="PageLookup" parent="Page">
    <property name="renderFooter" value="false"/>
      <property name="header">
        <ref bean="HeaderPage_NoActions"/>
      </property>
  </bean>
  
</beans>