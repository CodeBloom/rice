  <!-- Common Views -->
  
  <bean id="InquiryView" abstract="true" class="org.kuali.rice.kns.uif.container.InquiryView" parent="FormView">
     <property name="name" value="default"/>
     <property name="viewHelperServiceBeanId" value="kualiInquirable"/>
     <property name="formClass" value="org.kuali.rice.kns.web.spring.form.InquiryForm"/>
     <property name="defaultBindingObjectPath" value="bo"/>
     <property name="controllerRequestMapping" value="inquiry"/>
     <property name="readOnly" value="true"/>
     <property name="footer">
        <ref bean="FooterInquiry"/>
     </property>     
  </bean>
   
  <!-- Common Pages --> 
  
  <bean id="Page_Accordion" parent="GroupPage">
      <property name="header">
         <ref bean="HeaderPage_AccordionActions"/>
      </property>
  </bean>
  
  <bean id="PageInquiry" parent="GroupPage">
      <property name="header">
         <ref bean="HeaderPageInquiry"/>
      </property>
  </bean>
  
  <!-- Common Groups -->
  <bean id="Group_ExpandCloseActions" parent="GroupBodyOnly">
      <property name="styleClass" value="right"/>
      <property name="items">
         <list> 
            <bean parent="ActionField_Secondary" p:methodToCall="expandAll" p:actionLabel="expand all"/>
            <bean parent="ActionField_Secondary" p:methodToCall="closeAll" p:actionLabel="collapse all"/>
         </list>
      </property>
      <property name="layoutManager.orientation" value="HORIZONTAL"/> 
  </bean>

  <!-- Common Headers --> 
  
  <bean id="HeaderPage_AccordionActions" parent="HeaderPage">
      <property name="group">
       <bean parent="GroupBodyOnly">
        <property name="items">
          <list>
            <bean parent="GroupBodyOnly">
              <property name="styleClass" value="left"/>
              <property name="items">
                <list> 
                  <bean parent="MessageField" p:messageText="* indicates required field" 
                        p:messageType="REQUIRED"/>
                </list>
              </property>
            </bean>   
            <bean parent="Group_ExpandCloseActions"/>
          </list>  
        </property>
        <property name="layoutManager.orientation" value="HORIZONTAL"/> 
       </bean> 
      </property>
  </bean>
  
  <bean id="HeaderPageInquiry" parent="HeaderPage">
     <property name="group">
       <bean parent="Group_ExpandCloseActions"/>
     </property>
  </bean>
  
  <!-- Common Footers -->
  
  <bean id="FooterInquiry" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
        </list>
      </property>  
  </bean>
  
  <bean id="Footer_SaveCloseCancel" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="save" p:actionLabel="Save"/>
          <bean parent="ActionField_Secondary" p:methodToCall="close" p:actionLabel="Close"/>
          <bean parent="ActionLinkField" p:methodToCall="cancel" p:actionLabel="Cancel"/>
        </list>
      </property>  
  </bean>  

</beans>