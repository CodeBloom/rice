<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- This file is a copy of SampleAppBeans.xml that removes references to the KIM configurer and DD files
     so that the webapp can be loaded up within KNS unit unit tests without adding KIM dependencies to the POM.
     When run standalone, this file is not detected so it does not end up overidding and omitting KIM will
     allow the sample app to be run standalone from within Eclipse (not Maven, as the KNS POM won't have the KIM
     dependencies because of circular dependency issues.

     This works because web.xml has been modified to use the resource string: classpath:SampleAppBeans.xml, classpath:SampleAppBeans-test*.xml
     which performs some magic that I don't fully understand but that nevertheless results in this test context only being detected
     from within unit tests ;)
 -->
<beans>

    <!--	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties" ref="configProperties" />
	</bean>

	<bean id="bootstrapConfig" class="org.kuali.rice.core.config.spring.ConfigFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath:META-INF/sampleapp-test-config.xml</value>
			</list>
		</property>
	</bean>

	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod" value="org.kuali.rice.core.config.spring.ConfigInitializer.initialize" />
		<property name="arguments">
			<list><ref bean="bootstrapConfig"/></list>
		</property>
	</bean>

	<bean id="configProperties" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="bootstrapConfig" />
		<property name="targetMethod" value="getProperties" />
	</bean>

	<bean id="jtaTransactionManager" class="org.springframework.transaction.jta.JotmFactoryBean">
      <property name="defaultTimeout" value="${transaction.timeout}"/>
    </bean>

    <alias alias="jtaUserTransaction" name="jtaTransactionManager"/>

	<bean id="riceDataSource" class="org.kuali.rice.core.database.XAPoolDataSource">
		<property name="transactionManager" ref="jtaTransactionManager" />
		<property name="driverClassName" value="${datasource.driver.name}" />
		<property name="url" value="${datasource.url}" />
		<property name="maxSize" value="${datasource.pool.maxSize}" />
		<property name="minSize" value="${datasource.pool.minSize}" />
		<property name="maxWait" value="${datasource.pool.maxWait}" />
		<property name="validationQuery" value="${datasource.pool.validationQuery}" />
		<property name="username" value="${datasource.username}" />
		<property name="password" value="${datasource.password}" />
	</bean>

    <bean id="riceNonTransactionalDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${datasource.driver.name}"/>
        <property name="url" value="${datasource.url}"/>
        <property name="maxActive" value="${datasource.pool.maxActive}"/>
        <property name="minIdle" value="${datasource.minIdle}" />
        <property name="initialSize" value="${datasource.initialSize}"/>
        <property name="validationQuery" value="${datasource.pool.validationQuery}"/>
        <property name="username" value="${datasource.username}" />
        <property name="password" value="${datasource.password}" />
        <property name="accessToUnderlyingConnectionAllowed" value="${datasource.accessToUnderlyingConnectionAllowed}"/>
    </bean>



	<import resource="classpath:org/kuali/rice/core/config/COREConfigSpringBeans.xml"/>


    <import resource="classpath:org/kuali/rice/ksb/config/KSBConfigSpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/kns/config/KNSConfigSpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/kim/config/KIMConfigSpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/kcb/config/KCBConfigSpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/kew/config/KEWConfigSpringBeans.xml"/>
	<import resource="classpath:org/kuali/rice/ken/config/KENConfigSpringBeans.xml"/>-->

    <import resource="classpath:SampleAppBeans.xml"/>
    <bean id="config" class="org.kuali.rice.core.config.spring.ConfigFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath:META-INF/sampleapp-test-config.xml</value>
			</list>
		</property>
	</bean>
    <bean id="bootstrapConfig" class="org.kuali.rice.core.config.spring.ConfigFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath:META-INF/sampleapp-test-config.xml</value>
			</list>
		</property>
	</bean>


</beans>
