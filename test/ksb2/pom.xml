<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>rice-test</artifactId>
		<groupId>org.kuali.rice</groupId>
		<version>2.0.0-m2</version>
	</parent>
	<groupId>org.kuali.rice</groupId>
	<artifactId>ksb2</artifactId>
	<version>2.0.0-m2</version>
	<name>ksb2</name>
	<dependencies>
		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>rice-devtools</artifactId>
			<version>2.0.0-m2</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>ksb-test-client1</artifactId>
			<type>war</type>
			<version>2.0.0-m2</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>ksb-test-client2</artifactId>
			<type>war</type>
			<version>2.0.0-m2</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>test-client-shared</artifactId>
			<version>2.0.0-m2</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>rice-impl</artifactId>
			<version>2.0.0-m2</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
	<profiles>
	
	    <!-- TODO - yuck, ended up having to create two profiles here to get the desired effect with mostly duplicated configuration
	                of the cargo plugin.  I'm sure there's a better way to do this, don't have time right now to figure it out though -->
	
		<profile>
			<id>eclipse</id>
			<!-- This profile is meant to be used when wanting to run the integration tests inside of eclipse -->
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<cargo.wait>true</cargo.wait>
				<skipITs>true</skipITs>
				<cargo.servlet.port>10200</cargo.servlet.port>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<version>1.0.5</version>
						<configuration>
							<wait>${cargo.wait}</wait>
							<container>
								<containerId>jetty7x</containerId>
								<type>embedded</type>
								<systemProperties>
									<cargo.servlet.port>${cargo.servlet.port}</cargo.servlet.port>
								</systemProperties>
							</container>
							<configuration>
								<properties>
									<cargo.servlet.port>${cargo.servlet.port}</cargo.servlet.port>
									<cargo.logging>medium</cargo.logging>
								</properties>
								<deployables>
									<deployable>
										<groupId>org.kuali.rice</groupId>
										<artifactId>ksb-test-client1</artifactId>
										<type>war</type>
										<properties>
											<context>/TestClient1</context>
										</properties>
									</deployable>
									<deployable>
										<groupId>org.kuali.rice</groupId>
										<artifactId>ksb-test-client2</artifactId>
										<type>war</type>
										<properties>
											<context>/TestClient2</context>
										</properties>
									</deployable>
								</deployables>
							</configuration>
						</configuration>
						<executions>
							<execution>
								<id>start-container</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
								</goals>
							</execution>
							<execution>
								<id>stop-container</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>it</id>
			<activation>
				<property>
					<name>!skipITs</name>
				</property>
			</activation>
			<properties>
				<cargo.servlet.port>10200</cargo.servlet.port>
				<cargo.wait>false</cargo.wait>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.cargo</groupId>
						<artifactId>cargo-maven2-plugin</artifactId>
						<version>1.0.5</version>
						<configuration>
							<wait>${cargo.wait}</wait>
							<container>
								<containerId>jetty7x</containerId>
								<type>embedded</type>
								<systemProperties>
									<cargo.servlet.port>${cargo.servlet.port}</cargo.servlet.port>
								</systemProperties>
							</container>
							<configuration>
								<properties>
									<cargo.servlet.port>${cargo.servlet.port}</cargo.servlet.port>
									<cargo.logging>medium</cargo.logging>
								</properties>
								<deployables>
									<deployable>
										<groupId>org.kuali.rice</groupId>
										<artifactId>ksb-test-client1</artifactId>
										<type>war</type>
										<properties>
											<context>/TestClient1</context>
										</properties>
									</deployable>
									<deployable>
										<groupId>org.kuali.rice</groupId>
										<artifactId>ksb-test-client2</artifactId>
										<type>war</type>
										<properties>
											<context>/TestClient2</context>
										</properties>
									</deployable>
								</deployables>
							</configuration>
						</configuration>
						<executions>
							<execution>
								<id>start-container</id>
								<phase>pre-integration-test</phase>
								<goals>
									<goal>start</goal>
								</goals>
							</execution>
							<execution>
								<id>stop-container</id>
								<phase>post-integration-test</phase>
								<goals>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.6</version>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>integration-test</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>